<div class="outer-container">
  <div class="row listings-container">
    <% listings.each(function (listing) { %>
      <div class="listing-container col-md-6 col-sm-12 row-space-2 pull-left">
        <div class="panel-img listing-img">
          <a href="#/listings/<%= listing.id %>">
            <img src="<%= listing.images().first().escape('url') %>" alt="" />
          </a>
          <div class="listing-price">
            $<%= listing.escape('price_daily') %>
            <i class="fa fa-bolt"></i>
          </div>
        </div>
        <div class="panel-body">
          <a href="#/listings/<%= listing.id %>">
            <h3 class="row-space-top-1">
              <%= listing.escape('name') %>
            </h3>
            <span class="address">
              <%= listing.escape('address') %>
            </span>
          </a>
        </div>
      </div>
    <% }); %>
  </div>
</div>
